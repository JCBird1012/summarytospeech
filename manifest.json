{
  "manifest_version": 2,

  "name": "Summary To Speech",
  "description": "Use the Euphony to read text summaries out loud.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Summary To Speech",
    "default_popup": "popup.html"
  },

  "content_scripts": [
	  {
	    "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"],
	    "run_at": "document_end"
    }
  ],

  "permissions": [
    "activeTab"
  ]
}
